	assert.Equal(t, "0.{{repeat "0" (sub .Digits 1)}}4", fixed.F{{.Bits}}d{{.Digits}}FromStringForced("0.{{repeat "0" (sub .Digits 1)}}405").String())
	assert.Equal(t, "-0.{{repeat "0" (sub .Digits 1)}}4", fixed.F{{.Bits}}d{{.Digits}}FromStringForced("-0.{{repeat "0" (sub .Digits 1)}}405").String())

